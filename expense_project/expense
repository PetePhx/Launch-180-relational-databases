#! /home/user/.rbenv/shims/ruby

require "pg"

db = PG.connect(dbname: "expenses")
result = db.exec "SELECT * FROM expenses ORDER BY created_on;"

result.each do |row|
  puts [ row["id"].rjust(3),
         row["created_on"].rjust(10),
         row["amount"].rjust(12),
         row["memo"] ].join(' | ')
end
